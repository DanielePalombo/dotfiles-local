# Thoughbot aliases
# Unix
balias ll "ls -al"
balias ln "ln -v"
balias mkdir "mkdir -p"
balias e "$EDITOR"
balias v "$VISUAL"

# Rails
balias migrate "rake db:migrate db:rollback and rake db:migrate db:test:prepare"
balias s fish_rspec
balias r fish_rake
balias ra fish_rails

# Pretty print the path
balias path 'echo $PATH | tr -s ":" "\n"'

# Personal aliases
# Bundle aliases
balias b "bundle"
balias be "bundle exec"
balias bi "bundle install"
balias bo "bundle open"

# Git
balias g "git"
balias gs "g status"
balias gd "g diff"
balias gb "git browse"

balias dru "~/.rbenv/versions/2.4.1/bin/dru"
balias docker-sync "/Users/danielepalombo/.rbenv/versions/2.4.1/bin/docker-sync"
balias d "dru"
balias dup "dru up; and dru attach app"
balias rubocopmaster "git diff-tree -r --no-commit-id --name-only head origin/master | xargs rubocop"


# Set bin Path
set PATH ~/.bin ./bin $PATH

