# Thoughbot aliases
# Unix
balias ll "ls -al"
balias ln "ln -v"
balias mkdir "mkdir -p"
balias e "$EDITOR"
balias v "$VISUAL"

# Rails
balias migrate "rake db:migrate db:rollback and rake db:migrate db:test:prepare"
balias s fish_rspec
balias r fish_rake
balias ra fish_rails

# Pretty print the path
balias path 'echo $PATH | tr -s ":" "\n"'

# Personal aliases
# Bundle aliases
balias b "bundle"
balias be "bundle exec"
balias bi "bundle install"
balias bo "bundle open"

# Git
balias g "git"
balias gs "g status"
balias gd "g diff"
balias gb "git browse"

# Set bin Path
set PATH ~/.bin ./bin $PATH
